<h1>Create New Appointment for <%= @physician.full_name %></h1>
<h4><%= link_to "back", physician_path(@physician.id) %>

<%= form_with(model: [@physician, @appointment], local: true, class:"ui form") do |f| %>
<%= f.label :date %>
<%= f.date_field :date, min: Date.today%>
<%= f.label :patient %>
<%= f.select :patient_id, Patient.all.collect { |u| [u.full_name, u.id]} %>
<%# this isn't working with the 'p' variable - but is with the 'u' variable %>
<%= f.submit nil, class: "ui purple button inverted" %>
<% end %>