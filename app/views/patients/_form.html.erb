<%= form_with(model: @patient, local: true, class:'ui form') do |f| %>
  <div class= 'field'>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, required: true, placeholder:"Patient's First name" %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, required: true, placeholder:"Patient's Last name" %>
    <br />
    <%= f.submit nil, class:'ui pink button' %>
  </div>
<% end %>